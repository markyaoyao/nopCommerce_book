@model CategoryNavigationModel


@if (Model.Categories.Count > 0)
{
    var rowIndex = 0;

    <div class="accordion accordion-flush" id="accordionFlushExample">

        @foreach (var category in Model.Categories)
        {
            rowIndex++;

            <div class="accordion-item">
                <h2 class="accordion-header" id="flush-headingOne">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapse-@rowIndex" aria-expanded="false" aria-controls="flush-collapse-@rowIndex">
                        @category.Name
                    </button>
                </h2>
                <div id="flush-collapse-@rowIndex" class="accordion-collapse collapse @Html.Raw(rowIndex == 1 ? "show" : "")" aria-labelledby="flush-heading-@rowIndex" @*data-bs-parent="#accordionFlushExample"*@>
                    <div class="profile-page-area">
                        @if (category.SubCategories.Count > 0)
                        {
                            <ul class="list-inner">
                                @foreach (var subCategory in category.SubCategories)
                                {
                                    <li><a href="@Url.RouteUrl("Category", new { SeName = subCategory.SeName })">@subCategory.Name <i class="ri-arrow-right-s-line"></i></a></li>
                                }

                            </ul>
                        }
                        else
                        {
                            <ul class="list-inner">
                                <li><a href="@Url.RouteUrl("Category", new { SeName = category.SeName })">@category.Name <i class="ri-arrow-right-s-line"></i></a></li>
                            </ul>
                        }
                    </div>
                </div>
            </div>
        }

    </div>

